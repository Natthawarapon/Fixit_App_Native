<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">
    <RelativeLayout
        android:id="@+id/message_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
       >

        <ImageView
            android:id="@+id/imageView_message_image_you"
            android:layout_width="196dp"
            android:layout_height="193dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rect_round_white"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_image_black_24dp" />
        <TextView
            android:id="@+id/textView_message_time_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_message_image_you"
            android:layout_alignStart="@id/imageView_message_image_you"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="3/15/2018 3:00 PM"/>
    </RelativeLayout>
</FrameLayout>